<!-- エラーメッセージ -->
<% if @errors.present? %>
  <div class="error">
    <% @errors.each do |message| %>
      <p class="alert"><%= message %></p>
    <% end %>
  </div>
<% end %>

<div class="form-group">
  <div>
    <%= f.text_area :content, :value => @tweet_input.try(:content), class: 'form-control', placeholder: "（本文は１４０字以内で投稿）", rows: 3 %>
  </div>
</div>
    
