<div id="tweet_boxes">
  
  <% if @tweets.present? %>
    <%= page_entries_info @tweets %>
    <% @tweets.each do |tweet|%>
    <div class="row each_tweet">
      <%= render :partial => 'tweet_box', :locals => {:tweet => tweet} %>
        <div class="col-xs-3 col-sm-2 col-md-2 show clearfix">
          <%= link_to "詳細", tweet_path(tweet), class: "btn btn-primary show_btn img-responsive pull-right" %>
        </div>
    </div>
    <% end %>
    <% if @tweets.present? %>
      <%= paginate @tweets %>
    <% end %>
  <% else %>
    ツイートがありません。
  <% end %>
</div>