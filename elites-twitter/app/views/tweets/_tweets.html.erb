<div id="tweet_boxes">
  <% if @tweets.present? %>
    <%= page_entries_info @tweets %>
    <% @tweets.each do |tweet|%>
      <div class="row each_tweet">
        <%= render :partial => 'tweets/tweet_box', :locals => {:tweet => tweet} %>
        <%= render :partial => 'tweets/link_to_tweet_show', :locals => {:tweet => tweet} %>  
      </div>
    <% end %>
    <% if @tweets.present? %>
      <%= paginate @tweets %>
    <% end %>
  <% else %>
    ツイートがありません。
  <% end %>
</div>