<!--need div row each_tweet-->
<div class="img col-xs-2 col-sm-2 col-md-2">
  <%= render :partial => 'tweets/thumbnail', :locals => {:user => tweet.user} %>
</div>
<div class="col-xs-7 col-sm-8 col-md-8 information">
  <div class="row">
    <div class="tweet_name col-xs-12 col-sm-4 col-md-5"><%= link_to "@#{tweet.user.name}", user_path(tweet.user_id), { :class => "link" } %></div>
    <div class="tweet_created col-xs-12 col-sm-4 col-md-5">(<%= tweet.created_at %>)</div>
  </div>
  <div class="row">
    <% if current_user.id == tweet.user_id %>
      <%= link_to edit_tweet_path(tweet.id), { :class => "link col-xs-12 col-sm-12 col-md-12"}  do%>
        <div class="tweet_content"><%= tweet.content %></div>
      <% end %>
    <% else %>
      <div class = "col-xs-12 col-sm-12 col-md-12">
        <div class="tweet_content"><%= tweet.content %></div>
      </div>
    <% end %>
  </div>
</div>
