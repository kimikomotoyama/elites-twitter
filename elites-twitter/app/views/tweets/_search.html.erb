<%# form_for の代わりに search_form_for を使うことで検索フォームを作成 %>
<%= search_form_for @q do |f| %>

  <%# start 特定の文字列で始まる商品名で検索 %>
  <%= f.label :keywords, "検索する（ユーザーネーム、内容）", class: 'control-label' %>
  <%= f.text_field :keywords, required: false, value: params.dig(:q, :keywords), class: 'form-control' %>
  <br />
 
  <%# 検索ボタン %>
  <%= f.submit %>
<% end %>
<hr />