<div class="wrapper">
<div class="row">
  <div class="col-md-8 col-md-offset-2 col-sm-12 col-sm-offset-0">
    <h2 class="devise_title col-sm-offset-6">ユーザー新規登録</h2>

    <%= form_for(resource, as: resource_name,  url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group row ">
        <%= f.label :name, class: "col-sm-2 col-form-label pull-left" %>
        <div class="col-sm-10">
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group row">
        <%= f.label :email, class: "col-sm-2 col-form-label pull-left" %>
        <div class="col-sm-10">
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password , class: "col-sm-2 col-form-label pull-left" %>
        <div class="col-sm-10">
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password_confirmation, class: "col-sm-2 col-form-label pull-left" %>
        <div class="col-sm-10">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>
      </div>
   
      <div class="form-group row">
        <%= f.label :image , class: "col-sm-2 col-form-label pull-left" %><br/>
        <div class="col-sm-10">
          <%= f.file_field :image, class: "filestyle", data: {buttonText: 'ファイルを選択', buttonBefore: "true", placeholder: "選択されていません", badge: "false"}%>
          <%= f.hidden_field :image_cache %>
        </div>
      </div>
      
      <div class="form-group row">
        <%= f.label :profile, class: "col-sm-2 col-form-label pull-left"  %>
        <div class="col-sm-10">
          <%= f.text_area :profile, class: "form-control"%>
        </div>
      </div>

      <div class="form-group submit row">
        <%= f.submit "登録する", class: "col-sm-offset-6 btn btn-primary" %>
      </div>
    <% end %>

    
  </div>
</div>
</div>
