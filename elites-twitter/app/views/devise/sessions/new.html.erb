<div class="wrapper">
<div class="row">
  <div class="col-md-8 col-md-offset-2 col-sm-12 col-sm-offset-0">
    <h2 class="devise_title col-sm-offset-6">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group row">
        <%= f.label :email, class: "col-sm-2 col-form-label pull-left" %>
        <div class="col-sm-10">
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password , class: "col-sm-2 col-form-label pull-left" %>
        <div class="col-sm-10">
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <label>
            <%= f.check_box :remember_me %> ログイン情報を記録する
          </label>
        </div>
      <% end -%>

      <div class="form-group submit row">
        <%= f.submit "ログイン", class: 'col-sm-offset-6 btn btn-primary' %>
      </div>
    <% end %>


  </div>
</div>
</div>